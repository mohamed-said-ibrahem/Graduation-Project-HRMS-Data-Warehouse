    <!-- Content -->
    <div id="content">
        <div id="content-header">
            <div id="breadcrumb"> <a href="#" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a> <a href="#" class="current">Promotion</a> </div>
            <h1>Promotion</h1>
        </div>
        <div class="container-fluid">
            <hr>
            <div class="row-fluid">
                <div class="span6">
                    <div class="widget-box">
                        <div class="widget-title">
                            <span class="icon"> <i class="icon-align-justify"></i> </span>
                            <h5>Criteria</h5>
                        </div>
                        <div class="widget-content nopadding">
                            <form action="#" method="post" class="form-horizontal">
                                <div class="control-group">
                                    <label class="control-label">Department Name :</label>
                                    <div class="controls">
                                        @Html.DropDownList("DepartmentId", new SelectList(ViewBag.departments, "DepartmentId", "Name"), "Please select", new { @id = "ddlDepartment" })
                                        @Html.Hidden("Name", null, new { @id = "hfDepartmentName" })

                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">Position Name :</label>
                                    <div class="controls">
                                        @Html.DropDownList("PositionId", new SelectList(ViewBag.positions, "PositionId", "PositionName"), "Please select", new { @id = "ddlPosition" })
                                        @Html.Hidden("PositionName", null, new { @id = "hfPositionName" })

                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">Maximum Skill Rank :</label>
                                    <div class="controls">
                                        <input type="number" id="quantity" name="quantity" min="1" max="5">
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label for="normal" class="control-label">Minimum Performance Percentage :</label>
                                    <div class="controls">
                                        <input type="text" name="perf" id="mask-percent" class=" mask text">
                                        <span class="help-block blue span8">99%</span>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">Minimum Attendance Percentage :</label>
                                    <div class="controls">
                                        <input type="text" name="atten" id="mask-percent" class=" mask text">

                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">New Position :</label>
                                    <div class="controls">
                                        @Html.DropDownList("NewPositionId", new SelectList(ViewBag.positions, "PositionId", "PositionName"), "Please select", new { @id = "ddlPosition" })
                                        @Html.Hidden("PositionName", null, new { @id = "hfPositionName" })

                                    </div>
                                </div>
                                <div class="form-actions">
                                    <button type="submit" class="btn btn-success">Print</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <div class="widget-box">
                        <div class="widget-title">
                            <span class="icon"> <i class="icon-briefcase"></i> </span>
                            <h5>Table</h5>
                        </div>
                        <div class="widget-content">
                            <div class="row-fluid">
                                <div class="span12">
                                    <table class="table table-bordered data-table">
                                        <thead>
                                            <tr>
                                                <th>User Name</th>
                                                <th>Average Skill Rank</th>
                                                <th>Performance Percentage</th>
                                                <th>Attendance Percentage</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (DataRow dr in Model.Rows)
                                            {
                                                <tr>
                                                    <td>@dr["user_name"]</td>
                                                    <td>@dr["avg_skills_rank"]</td>
                                                    <td>@dr["performance_percentage"]%</td>
                                                    <td>@dr["attendance_percentage"]%</td>
                                                    <td><button type="button" class="btn btn-primary btn-mini" onclick="promote(this,@dr["employee_id"])">Promote</button></td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
