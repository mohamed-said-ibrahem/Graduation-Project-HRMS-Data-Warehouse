    <div id="content">
        <div id="content-header">
            <div id="breadcrumb"> <a href="#" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a> <a href="#" class="current">Hire Employee</a> </div>
            <h1>Hire Employee</h1>
        </div>
        <div class="container-fluid">
            <hr>
            <div class="row-fluid">
                <div class="span6">
                    <div class="widget-box">
                        <div class="widget-title">
                            <span class="icon"> <i class="icon-align-justify"></i> </span>
                        </div>
                        <div class="widget-content nopadding">
                            <form action="#" method="post" class="form-horizontal">
                                <div class="control-group">
                                    <label class="control-label">Applicant Name :</label>
                                    <div class="controls">
                                        @Html.DropDownList("ApplicantId", new SelectList(ViewBag.Applicants, "ApplicantId", "Name"), "Please select", new { @id = "ddlApplicants" })
                                        @Html.Hidden("Name", null, new { @id = "hfApplicantName" })
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">Department :</label>
                                    <div class="controls">
                                        @Html.DropDownList("DepartmentId", new SelectList(ViewBag.Department, "DepartmentId", "Name"), "Please select", new { @id = "ddlDepartment" })
                                        @Html.Hidden("Name", null, new { @id = "hfDepartmentName" })
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">Position :</label>
                                    <div class="controls">
                                        @Html.DropDownList("PositionId", new SelectList(ViewBag.Position, "PositionId", "PositionName"), "Please select", new { @id = "ddlPosition" })
                                        @Html.Hidden("PositionName", null, new { @id = "hfPositionName" })

                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">Salary :</label>
                                    <div class="controls">
                                        <div class="input-append">
                                            <input type="text" placeholder="1000" class="span11" name="salary">
                                            <span class="add-on">$</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">Date Of Birth :</label>
                                    <div class="controls">
                                        <div data-date="12-02-2012" class="input-append date datepicker">
                                            <input type="text" value="12-02-2012" data-date-format="mm-dd-yyyy" class="span11" name="birthDate">
                                            <span class="add-on"><i class="icon-th"></i></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">Educational Degree :</label>
                                    <div class="controls">
                                        <input type="text" class="span11" placeholder="Degree" name="edu" />
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">Graduation Date :</label>
                                    <div class="controls">
                                        <div data-date="12-02-2012" class="input-append date datepicker">
                                            <input type="text" value="12-02-2012" data-date-format="mm-dd-yyyy" class="span11" name="grad">
                                            <span class="add-on"><i class="icon-th"></i></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">Notes :</label>
                                    <div class="controls">
                                        <input type="text" class="span11" name="notes" />
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">Temporary User Name :</label>
                                    <div class="controls">
                                        <input type="text" class="span11" placeholder="User Name" name="user" />
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">Temporary Password :</label>
                                    <div class="controls">
                                        <input type="password" class="span11" placeholder="Enter Password" name="pass" />
                                    </div>
                                </div>
                                <div class="form-actions">
                                    <button type="submit" class="btn btn-success">Set</button>
                                </div>
                            </form>
