                }

                function addEmployee(trainingId) {
                    debugger
                    $.ajax({
                        url: "addEmployeeToTrainingByName",
                        type: 'POST',
                        datatype: 'json',
                        data: {'userName': document.getElementById("name").value, 'trainingId': trainingId },

                        success: function (data) {
                            //debugger
                            //data = $.parseJSON(data);

                            if (data == 2) {
                                            alert("No Available Space In That Training !");
                            } else if (data == 1) {
                                            alert("Employee Has Been Assigned Successfully !");
                            } else if (data == 0) {
                                            alert("Employee Is Not Available !");
                            } else {
                                            alert("An Error Has Been Occured : No such an Employee Exists");
                            }

                        }
                    });
                    return false;
                }
    </script>


