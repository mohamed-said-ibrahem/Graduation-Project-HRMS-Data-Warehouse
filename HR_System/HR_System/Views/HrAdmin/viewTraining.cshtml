                            <span class="icon"> <i class="icon-briefcase"></i> </span>
                            <h5>Add Another Employee</h5>
                        </div>
                        <div class="widget-content">
                            <div class="row-fluid">
                                <div class="span4">
                                    <input type="text" class="span11" placeholder="Employee User Name" id="name" />
                                    <input type="button" class="btn btn-primary" value="Add" onclick="addEmployee(@ViewBag.Training.TrainingId)">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <div class="widget-box">
                        <div class="widget-title">
                            <span class="icon"> <i class="icon-briefcase"></i> </span>
                            <h5>Recommended Employees</h5>
                        </div>
                        <div class="widget-content">
                            <div class="row-fluid">
                                <div class="span12">
                                    <table class="table table-bordered data-table" id="Table">
                                        <thead>
                                            <tr>
                                                <th>Employee Name</th>
                                                <th>Email</th>
                                                <th>Phone Number</th>
                                                <th>Address</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in ViewBag.recommendedEmployees)
                                            {
                                                <tr class="odd gradeX">
                                                    <td>@item.UserName</td>
                                                    <td>@item.Email</td>
                                                    <td>@item.PhoneNumber</td>
                                                    <td>@item.Address</td>
                                                    <td><button class="btn btn-primary btn-mini" value="Assign" onclick="assign(this,@ViewBag.Training.TrainingId,@item.User_id)">Assign </button></td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
