    <div id="content">
        <div id="content-header">
            <div id="breadcrumb"> <a href="#" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a> <a href="Training Board.html">Training Board</a> <a href="#" class="current">View Traning</a> </div>
            <h1>Viewing Training Information</h1>
        </div>
        <div class="container-fluid">
            <hr>
            <div class="row-fluid">
                <div class="span12">
                    <div class="widget-box">
                        <div class="widget-title">
                            <span class="icon"> <i class="icon-briefcase"></i> </span>
                            <h5>Training Info</h5>
                        </div>
                        <div class="widget-content">
                            <div class="row-fluid">
                                <div class="span4">
                                    <table class="table table-bordered table-invoice">
                                        <tbody>
                                            <tr>
                                            <tr>
                                                <td class="width30">Training Name:</td>
                                                <td class="width70"><strong>@ViewBag.Training.TrainingName</strong></td>
                                            </tr>
                                            <tr>
                                                <td class="width30">Start Date:</td>
                                                <td class="width70"><strong>@ViewBag.Training.StartDate</strong></td>
                                            </tr>
                                            <tr>
                                                <td class="width30">End Date:</td>
                                                <td class="width70"><strong>@ViewBag.Training.EndDate</strong></td>
                                            </tr>
                                            <tr>
                                                <td class="width30">Hours Per Day:</td>
                                                <td class="width70"><strong>@ViewBag.Training.HoursPerDay</strong></td>
                                            </tr>
                                            <tr>
                                                <td class="width30">Skill:</td>
                                                <td class="width70"><strong>@ViewBag.skill_name</strong></td>
                                            </tr>
                                            <tr>
                                                <td class="width30">Maximum Rank:</td>
                                                <td class="width70"><strong>@ViewBag.Training.MaxRank</strong></td>
                                            </tr>
                                            <tr>
                                                <td class="width30">Position :</td>
                                                <td class="width70"><strong>@ViewBag.Position_name</strong></td>
                                            </tr>
                                            <tr>
                                                <td class="width30">Department :</td>
                                                <td class="width70"><strong>@ViewBag.Department_name</strong></td>
                                            </tr>
                                            <tr>
                                                <td class="width30">Maximum Number Of Participants:</td>
                                                <td class="width70">@ViewBag.Training.MaxNumOfParticipants<strong></strong></td>
                                            </tr>
                                            <tr>
                                                <td class="width30">Number Of Enrolled Participants:</td>
                                                <td class="width70">@ViewBag.Training.ParticipationsNum<strong></strong></td>
                                            </tr>

                                        </tbody>

                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <div class="widget-box">
                        <div class="widget-title">
                            <span class="icon"> <i class="icon-briefcase"></i> </span>
                            <h5>Enrolled Employees</h5>
                        </div>
                        <div class="widget-content">
                            <div class="row-fluid">
                                <div class="span12">
                                    <table class="table table-bordered data-table" id="myTable">
                                        <thead>
                                            <tr>
                                                <th>Employee Name</th>
                                                <th>Email</th>
                                                <th>Phone Number</th>
                                                <th>Address</th>
                                                <th>Skill Rank Before Training</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (DataRow dr in Model.Rows)
                                            {
                                                <tr class="odd gradeX">
                                                    <td>@dr["user_name"]</td>
                                                    <td>@dr["email"]</td>
                                                    <td>@dr["phone_number"]</td>
                                                    <td>@dr["address"]</td>
                                                    <td>@dr["skill_rank_before_training"]</td>
                                                    <td><button type="button" class="btn btn-primary btn-mini" onclick="unassign(this,@ViewBag.Training.TrainingId,@dr["employee_id"])">Un Assign</button></td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <div class="widget-box">
