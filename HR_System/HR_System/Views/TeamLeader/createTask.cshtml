            <h1>New Task</h1>
        </div>
        <div class="container-fluid">
            <hr>

            <div class="row-fluid">
                <div class="span6">
                    <div class="widget-box">
                        <div class="widget-title">
                            <span class="icon"> <i class="icon-align-justify"></i> </span>
                        </div>
                        <div class="widget-content nopadding">
                            <div action="#" method="post" class="form-horizontal" style="width:auto">
                                <form method="post" class="form-horizontal">
                                    <div class="control-group">
                                        <label class="control-label">Task Name :</label>
                                        <div class="controls">
                                            <input name="task_name" type="text" class="span11" placeholder="task name" />
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label">Assign Time</label>
                                        <div class="controls">
                                            <div data-date="12-02-2012" class="input-append date datepicker">

                                                <input name="assign_time" type="text" value="12-02-2012" data-date-format="mm-dd-yyyy" class="span11">
                                                <span class="add-on"><i class="icon-th"></i></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label">Deadline</label>
                                        <div class="controls">
                                            <div data-date="12-02-2012" class="input-append date datepicker">
                                                <input name="deadline" type="text" value="12-02-2012" data-date-format="mm-dd-yyyy" class="span11">
                                                <span class="add-on"><i class="icon-th"></i></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label">Project Name :</label>
                                        <div class="controls">
                                            @Html.DropDownList("ProjectId", new SelectList(ViewBag.Projects, "ProjectId", "ProjectName"), "Please select", new { @id = "ddlProjects" })
                                            @Html.Hidden("ProjectName", null, new { @id = "hfProjectName" })
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label">Skills</label>
                                        <div class="controls">
                                            @Html.DropDownList("SkillId", new MultiSelectList(ViewBag.Skills, "SkillId", "SkillName"), "Please Select", new { multiple = "multiple" })
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <label class="control-label">Description :</label>
                                        <div class="controls">
                                            <input type="text" class="span11" />
                                            <span class="help-block">Description field</span>
                                        </div>
                                    </div>
                                    <div>
                                        <button style="margin: 3%" class="btn btn-success">Next</button>
                                    </div>
                                </form>
