    <script type="text/javascript">
                            $('.textarea_editor').wysihtml5();
                function createProject() {
                    var form = $("#onlineform").serialize();


                    $.ajax({
                                url: "create_project",
                        type: 'POST',

                        data: form,
                        dataType: 'json',
                        success: function () {}
                    });


        }

        function endProject(projectId) {
            $.ajax({
                url: "endProject",
                data: { 'projectId': projectId },
                type: 'POST',
                success: function () {
                    alert(["Project Has Been Ended"]);
                }
            });
            return false;

        }
    </script>

