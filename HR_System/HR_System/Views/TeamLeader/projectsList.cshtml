    <div id="content">
        <div id="content-header">
            <div id="breadcrumb"> <a href="#" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a><a href="#" class="current">Projects</a> </div>
        </div>
        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span12">
                    <div class="widget-box">
                        <div class="widget-title">
                            <span class="icon"> <i class="icon-briefcase"></i> </span>
                            <h5>Projects</h5>
                            <a href="#myModal" data-toggle="modal" class="btn btn-primary" style="float: right;">+ New Project</a>
                            <div id="myModal" class="modal hide">
                                <div class="modal-header">
                                    <button data-dismiss="modal" class="close" type="button">×</button>
                                    <h3>New Project</h3>
                                </div>
                                <div class="modal-body">
                                    <div class="widget-box">
                                        <div class="widget-content nopadding">
                                            <form action="#" method="post" id="onlineform" class="form-horizontal">
                                                <div class="control-group">
                                                    <label class="control-label">Project Name :</label>
                                                    <div class="controls">
                                                        <input name="name" id="name" type="text" class="span11" placeholder="Project name" />
                                                    </div>
                                                </div>
                                                <div class="control-group">
                                                    <label class="control-label">Client Name</label>
                                                    <div class="controls">
                                                        @Html.DropDownList("ClientId", new SelectList(ViewBag.clients, "ClientId", "Name"), "Please select", new { @id = "ddlClients" })
                                                        @Html.Hidden("Name", null, new { @id = "hfClientName" })
                                                    </div>
                                                </div>
                                                <div class="control-group">
                                                    <label class="control-label">Project Cost :</label>
                                                    <div class="controls">
                                                        <input name="cost" id="cost" type="text" class="span11" placeholder="Project cost" />
                                                    </div>
                                                </div>
                                                <div class="control-group">
                                                    <label class="control-label">Project Department</label>
                                                    <div class="controls">
                                                        @Html.DropDownList("DepartmentId", new SelectList(ViewBag.departments, "DepartmentId", "Name"), "Please select", new { @id = "ddlDepartment" })
                                                        @Html.Hidden("Name", null, new { @id = "hfDepartmentName" })
                                                    </div>
                                                </div>
                                                <div class="control-group">
                                                    <label class="control-label">Due Date :</label>
                                                    <div class="controls">
                                                        <input name="date" id="date" type="text" class="span11" placeholder="Due date" />
                                                    </div>
                                                </div>
                                                <div class="form-actions">
                                                    <button type="submit" class="btn btn-success" onclick="createProject()">Save</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="widget-content">
                            <div class="row-fluid">
                                <div class="span12">
                                    <table class="table table-bordered data-table" id="myTable">
                                        <thead>
                                            <tr>
                                                <th>Project Name</th>
                                                <th>Client</th>
                                                <th>Price</th>
                                                <th>Team Leader</th>
                                                <th>Department</th>
                                                <th>Started At</th>
                                                <th>Due Date</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr class="odd gradeX">
                                                    <td>@item.ProjectName</td>
                                                    <td>@item.Client.Name</td>
                                                    <td>@item.ProjectCost $</td>
                                                    <td>@ViewBag.LeaderName</td>
                                                    <td>@item.ProjectDepartment.Name</td>
                                                    <td>@item.StartDate</td>
                                                    <td>@item.EndDate</td>
                                                    @if (item.ActualEndTime != DateTime.MinValue.Date)
                                                    {
                                                            <td>
                                                                <button class="btn btn-primary" onclick="endProject(@item.ProjectId)">End Project</button>
                                                            </td>
                                                    }
                                                    else
                                                    {
                                                        <td></td>
                                                    }
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
