    <script type="text/javascript">
        function give(employee_giver, employee_reciever, taskId, skillId,r) {
            var i = r.parentNode.parentNode.rowIndex;
            $.ajax({
                url: "saveFeedback",
                data: { 'employee_giver': employee_giver, 'employee_reciever': employee_reciever, 'taskId': taskId, 'skillId': skillId, 'skillRank': document.getElementById("quantity").value, 'desc': document.getElementById("desc").value },
                success: function () {
                    document.getElementById("Table").deleteRow(i);
                    alert("Feedback has been saved Successfully !");
                }
            });
            return false;

        }
        function next() {
               $.ajax({
                    url: "getFeedbackList",
                    success: function () { }
               });
           return false;

        }
    </script>
