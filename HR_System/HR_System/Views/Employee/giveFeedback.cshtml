        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span6">
                    <h4>@ViewBag.project - @ViewBag.task</h4>
                    <hr>
                    @foreach (var item in ViewBag.users)
                    {


                        <h5>@item.UserName</h5>
                        <div class="widget-box">
                            <div class="widget-content nopadding">
                                <table class="table table-bordered table-striped" id="Table">
                                    <thead>
                                        <tr>
                                            <th>Skill</th>
                                            <th style="width: 20%">Rank(1 to 5)</th>
                                            <th>Message</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var skill in @item.EmployeeSkills)
                                        {
                                            <tr>
                                                <td>@skill.SkillName</td>
                                                <td><input type="number" id="quantity" name="quantity" min="1" max="5"></td>
                                                <td>
                                                    <div class="margin2">
                                                        <textarea class="span11" id="desc"></textarea>
                                                    </div>
                                                </td>
                                                <td><button class="btn btn-primary btn-mini" onclick="give(@ViewBag.employee_giver_id,@item.User_id,@ViewBag.taskId,@skill.SkillId,this)">Give</button></td>

                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                        </div>

                    }
                    <div>
                        <button style="margin: 3%" class="btn btn-success">@Html.ActionLink("Next", "getFeedbackList")</button>
                    </div>
