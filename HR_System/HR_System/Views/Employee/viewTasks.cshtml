    <div id="content">
        <div id="content-header">
            <div id="breadcrumb"> <a href="#" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a><a href="Tasks.html" class="current">Tasks</a><a href="#" class="current">Tasks Schedule</a> </div>
        </div>
        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span12">
                    <div class="widget-box">
                        <div class="widget-title">
                            <span class="icon"> <i class="icon-briefcase"></i> </span>
                            <h5>Tasks Schedule</h5>
                        </div>
                        <div class="widget-content">
                            <div class="row-fluid">
                                <div class="span12">
                                    <table class="table table-bordered data-table">
                                        <thead>
                                            <tr>
                                                <th>Project Name - Task Name</th>
                                                <th>Assign date</th>
                                                <th>Start Time</th>
                                                <th>Deadline</th>
                                                <th style="width: 10%">Remaining Hours</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (DataRow dr in Model.Tables[0].Rows)
                                            {
                                                <tr>
                                                    <td><strong style="color: blue">@dr["project_name"] - </strong> @dr["task_name"]</td>
                                                    <td>@dr["assign_time"]</td>
                                                    <td>@dr["start_time"]</td>
                                                    <td>@dr["deadline"]</td>
                                                    @if (true)
                                                    {
                                                        var hours = Convert.ToInt32((Convert.ToDateTime(@dr["deadline"]) - Convert.ToDateTime(@dr["start_time"])).TotalHours);
                                                        <td>@hours</td>
                                                    }
                                                </tr>
                                            }


                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <div class="widget-box">
                        <div class="widget-title">
                            <span class="icon"> <i class="icon-briefcase"></i> </span>
                            <h5>To-Do</h5>
                        </div>
                        <div class="widget-content">
                            <div class="row-fluid">
                                <div class="span12">
                                    <table class="table table-bordered data-table">
                                        <thead>
                                            <tr>
                                                <th>Project Name - Task Name</th>
                                                <th>Assign date</th>
                                                <th>Deadline</th>

                                                <th style="width: 10%"></th>
                                                <th>Notes</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (DataRow dr in Model.Tables[1].Rows)
                                            {

                                                <tr>
                                                    <td><strong style="color: blue">@dr["project_name"] - </strong> @dr["task_name"]</td>
                                                    <td>@dr["assign_time"]</td>
                                                    <td>@dr["deadline"]</td>
                                                    <td>
                                                        <button class="btn btn-primary" onclick="start(@dr["task_id"])">Start</button>
                                                    </td>
                                                    @if (Convert.ToDateTime(@dr["deadline"]) > DateTime.Now.Date)
                                                    {
                                                        <td strong style="color: red">Warning :You have exceeded the deadline </td>
                                                    }
                                                    else
                                                    {
                                                        <td></td>
                                                    }
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <div class="widget-box">
                        <div class="widget-title">
                            <span class="icon"> <i class="icon-briefcase"></i> </span>
                            <h5>Active Trainings</h5>
                        </div>
                        <div class="widget-content">
                            <div class="row-fluid">
                                <div class="span12">
                                    <table class="table table-bordered data-table">
                                        <thead>
                                            <tr>
                                                <th>Training Name</th>
                                                <th>Skill Name</th>
                                                <th>Start Date</th>
                                                <th>End Date</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (DataRow dr in Model.Tables[2].Rows)
                                            {

                                            <tr>
                                                <td><strong style="color: blue">@dr["name"] - </strong></td>
                                                <td>@dr["skill_name"]</td>
                                                <td>@dr["start_date"]</td>
                                                <td>@dr["end_date"]</td>


                                            </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
