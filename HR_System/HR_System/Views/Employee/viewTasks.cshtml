    <script type="text/javascript">
                            function start(taskId) {
                                $.ajax({
                                    url: "startTask",
                                    data: { 'taskId': taskId },
                                    type: 'POST',
                                    success: function () {
                                        alert(["Task Has Been Started and will Be Scedualed"]);
                                    }
                                });
                    return false;

                }
    </script>
